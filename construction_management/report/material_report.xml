<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <!-- Add you code here -->
        <template id="material_report" name="Material Report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <br />
                            <br />
                            <br />
                            <div class="row">
                                <div class="col-12">
                                    <h2 class="text-center">Project Consumed Materials</h2>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-12 d-flex">
                                    <h4>Project Name:</h4>
                                    &amp;nbsp;
                                    <h4 t-field="doc.name" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-sm w-100">
                                        <thead>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Unit of Measure</th>
                                            <th>Cost Per Unit</th>
                                            <th>Total Cost</th>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="doc.material_ids" t-as="material">
                                                <td>
                                                    <span t-field="material.product_id" />
                                                </td>
                                                <td>
                                                    <span t-field="material.quantity" />
                                                </td>
                                                <td>
                                                    <span t-field="material.uom_id" />
                                                </td>
                                                <td>
                                                    <span t-field="material.cost" />
                                                </td>
                                                <td>
                                                    <span t-field="material.cost_total" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
