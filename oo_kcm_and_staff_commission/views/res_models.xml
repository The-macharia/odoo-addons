<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">

        <!-- res.config.settings inherit form view -->
        <record id="oo_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Kcm Coupon Settings Inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@id='default_taxes']/div[2]/div[2]/div[2]" position="after">
                    <separator />
                    <div class="row">
                        <label string="KCM Tax" for="kcm_tax_id" class="col-lg-3 o_light_label" />
                        <field name="kcm_tax_id" domain="[('type_tax_use', 'in', ('purchase', 'all')), ('company_id', '=', company_id)]" />
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
