<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">

        <!-- hr.contract inherit form view -->
        <record id="oo_hr_contract_view_form" model="ir.ui.view">
            <field name="name">hr.contract.inherit.view.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='information']/group[@name='main_info']/group[@name='salary_and_advantages']" position="inside">
                    <field name="commission" />
                </xpath>

            </field>
        </record>

    </data>
</odoo>
