<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="project_form_inherit">
            <field name="name">project.form.view.inh</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="user_id" position="attributes">
	                <attribute name="readonly">0</attribute>
	            </field>
                <xpath expr="/form/sheet/notebook/page[2]" position="after">
                    <page string="Customer Information">
                        <group>
                            <group>
                                <field name="district" readonly="1"/>
                                <field name="nationality_id" readonly="1"/>
                                <field name="industry_id" readonly="1"/>
                                <field name="credit_status_id" readonly="1"/>
                                <field name="business_stage_id" readonly="1"/>
                                <field name="aec_loan_amt" readonly="1"/>
                                <field name="ext_loan_amt" readonly="1"/>
                                <field name="start_date" readonly="1"/>
                                <field name="end_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="gender" readonly="1"/>
                                <field name="full_time_employees" readonly="1"/>
                                <field name="other_employees" readonly="1"/>
                                <field name="casual_employees" readonly="1"/>
                                <field name="growth_revenue" readonly="1"/>
                                <field name="application_status_id" readonly="1"/>
                                <field name="loan_status_id" readonly="1"/>
                                <field name="lead_source_id" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
