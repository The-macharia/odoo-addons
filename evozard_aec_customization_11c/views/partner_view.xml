<!--
    Partner Form View
-->
        <record model="ir.ui.view" id="view_partner_form_ext">
            <field name="name">res_partner_mainsection_fields</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="lead_source_id" options="{'no_create_edit': True, 'no_create': True}"/>
                    <field name="source_type_id" options="{'no_create_edit': True, 'no_create': True}"/>
                    <field name="referal_contact_id" options="{'no_create_edit': True, 'no_create': True}"/>
                </xpath>
                
                <xpath expr="//field[@name='street2']" position="after">
                    <field name="district" placeholder="District"/>
                </xpath>
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page string="General Information">
                        <group>
                            <group>
                                <field name="id_no"/>
                                <field name="business_description"/>
                                <field name="credit_check_details"/>
                                <field name="nationality_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="business_industry_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="credit_status_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="business_stage_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="business_operating_status_id" options="{'no_create_edit': True, 'no_create': True}"/>
                            </group>
                            <group>
                                <field name="full_time_employees"/>
                                <field name="casual_employees"/>
                                <field name="other_employees"/>
                                <field name="growth_revenue"/>
                                <field name="gender"/>
                                <field name="account_manager_id" options="{'no_create_edit': True, 'no_create': True}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page string="Loans">
                        <group>
                            <group>
                                <field name="application_status_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="loan_status_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="aec_loan_amt"/>
                                <field name="ext_loan_amt"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
<!--
      Sale Form View  
-->
        <record model="ir.ui.view" id="sale_order_fields">
            <field name="name">sale_order_fields</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='note']" position="after">
                    <group>
                        <group>
                            <field name="service_start_date"/>
                            <field name="service_end_date"/>
                        </group>
                        <group>
                            
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        
