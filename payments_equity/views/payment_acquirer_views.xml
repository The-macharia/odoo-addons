<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="payment_acquirer_form" model="ir.ui.view">
      <field name="name">Equity Acquirer Form</field>
      <field name="model">payment.acquirer</field>
      <field name="inherit_id" ref="payment.payment_acquirer_form"/>
      <field name="arch" type="xml">
        <xpath expr='//group[@name="acquirer"]' position='inside'>
          <group attrs="{'invisible': [('provider', '!=', 'equity')]}">
            <field name="equity_username" attrs="{'required':[('provider', '=', 'equity'), ('state', '!=', 'disabled')]}"/>
            <field name="equity_password" attrs="{'required':[('provider', '=', 'equity'), ('state', '!=', 'disabled')]}"/>
            <field name="equity_password_confirm" attrs="{'required':[('provider', '=', 'equity'), ('state', '!=', 'disabled')]}"/>
            <field name="equity_till" attrs="{'required':[('provider', '=', 'equity'), ('state', '!=', 'disabled')]}"/>
            <field name="equity_default_partner_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" 
            attrs="{'required':[('provider', '=', 'equity'), ('state', '!=', 'disabled')]}"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>