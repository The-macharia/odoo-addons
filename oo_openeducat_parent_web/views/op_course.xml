<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- op.course inherit form view -->
        <record id="view_id" model="ir.ui.view">
            <field name="name">op.course.inherit.view.form</field>
            <field name="model">op.course</field>
            <field name="inherit_id" ref="openeducat_core.view_op_course_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='min_unit_load']" position="after">
                    <field name="upper_or_lower" />
                    <field name="class_number" />
                </xpath>

            </field>
        </record>

        <!-- op.marksheet.line inherit tree view -->
        <record id="view_op_marksheet_line_tree_inherit" model="ir.ui.view">
            <field name="name">op.marksheet.line.inherit.view.tree</field>
            <field name="model">op.marksheet.line</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_marksheet_line_tree" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='status']" position="replace" />

            </field>
        </record>

        <!-- op.marksheet.line inherit form view -->
        <record id="view_op_marksheet_line_form_inherit" model="ir.ui.view">
            <field name="name">op.marksheet.line.inherit.view.form</field>
            <field name="model">op.marksheet.line</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_marksheet_line_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='status']" position="replace" />

            </field>
        </record>

        <!-- op.result.line inherit tree view -->
        <record id="view_op_result_line_tree_inherit" model="ir.ui.view">
            <field name="name">op.result.line.inherit.view.tree</field>
            <field name="model">op.result.line</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_result_line_tree" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='status']" position="replace" />
                <xpath expr="//field[@name='grade']" position="after">
                    <field name="total_marks" />
                </xpath>
            </field>
        </record>


        <!-- op.result.line inherit form view -->
        <record id="view_op_result_line_form_inherit" model="ir.ui.view">
            <field name="name">op.result.line.inherit.view.form</field>
            <field name="model">op.result.line</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_result_line_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='status']" position="replace" />

                <xpath expr="//field[@name='grade']" position="after">
                    <field name="rubrics_grade" invisible="1" />
                    <field name="total_marks" />
                </xpath>

            </field>
        </record>


        <!-- res.company inherit form view -->
        <record id="view_company_form_inh" model="ir.ui.view">
            <field name="name">res.company.inherit.view.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="openeducat_core.view_company_form_openeducat_core" />
            <field name="arch" type="xml">

                <xpath expr="//form/sheet[1]/notebook/page[2]" position="inside">
                    <separator string="Motto" colspan="4" />
                    <field name="motto" colspan="4" nolabel="1" />

                    <separator string="Mission" colspan="4" />
                    <field name="mission" colspan="4" nolabel="1" />

                    <separator string="Vision" colspan="4" />
                    <field name="vision" colspan="4" nolabel="1" />
                </xpath>

            </field>
        </record>

    </data>
</odoo>
