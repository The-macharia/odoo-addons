       <record id="import_partner_wizard_form" model="ir.ui.view">
            <field name='name'>import.partner.wizard.form</field>
            <field name='model'>import.partner</field>
            <field name='arch' type='xml'>
                <form string='Import Partner'>
                	<group>
                		<field name="name" invisible="1"/>
                		<field name="actual_file" />
                	</group>
                	<footer>
                		<!-- context="{'coc': True} -->
                        <button name="import_partner" string="Import" type="object"
                            class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
               		</footer>
				</form>
			</field>
		</record>
		
		<record id="action_partner_import_form" model="ir.actions.act_window">
            <field name="name">Import Partner</field>
            <field name="res_model">import.partner</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
		
		
		<!--Vendor stock import menu-->
        <menuitem id="menu_partner_import_id" name="Import Partner"
            parent="sale.sale_order_menu" groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"
            action="action_partner_import_form" sequence="4"/>
