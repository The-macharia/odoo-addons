<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data noupdate="0">

    <!-- account.move inherit form view -->
    <record id="oo_view_move_form" model="ir.ui.view">
      <field name="name">account.move.inherit.view.form</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form" />
      <field name="arch" type="xml">

        <xpath expr="//field[@name='ref']" position="after">
          <field name="goods_nature" />
          <field name="hawb" />
          <field name="mawb" />
          <field name="terms" />
        </xpath>
        <xpath expr="//field[@name='currency_id']" position="after">
          <field name="cbm" />
          <field name="flight" />
          <field name="no_of_packages" />
          <field name="total_kgs" />
        </xpath>

      </field>
    </record>

    <!-- sale.order inherit form view -->
    <record id="oo_view_order_form" model="ir.ui.view">
      <field name="name">sale.order.inherit.view.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_shipping_id']" position="after">
          <field name="goods_nature" />
          <field name="hawb" />
          <field name="mawb" />
          <field name="terms" />
        </xpath>

        <xpath expr="//field[@name='payment_term_id']" position="after">
          <field name="cbm" />
          <field name="flight" />
          <field name="no_of_packages" />
          <field name="total_kgs" />
        </xpath>
      </field>
    </record>

    <!-- res.partner.bank inherit form view -->
    <record id="oo_view_partner_bank_form" model="ir.ui.view">
      <field name="name">res.partner.bank.inherit.view.form</field>
      <field name="model">res.partner.bank</field>
      <field name="inherit_id" ref="base.view_partner_bank_form" />
      <field name="arch" type="xml">

        <field name="acc_holder_name" position="after">
          <field name="currency_id" />
        </field>
      </field>
    </record>

  </data>
</odoo>
