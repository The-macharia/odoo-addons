<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <template id="invoice_report_document">
            <br />
            <div class="container">
                <div class="row">
                    <div class="col-6" style="width: 50% !important;" />
                    <div class="col-6 text-left" style="width: 50% !important;">
                        <p t-field="doc.partner_id.name" />
                        <p t-field="doc.partner_id.street" />
                        <p>
                            <span t-field="doc.partner_id.city" />
                            <span t-field="doc.partner_id.zip" />
                        </p>
                        <p t-field="doc.partner_id.country_id.name" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-3" t-if="doc.name" name="div_name">
                        <strong>Invoice No:</strong>
                        <p class="m-0" t-field="doc.name" />
                    </div>
                    <div class="col-3" t-if="doc.invoice_date" name="div_date">
                        <strong>Date:</strong>
                        <p class="m-0" t-esc="doc.invoice_date.strftime('%d %b, %Y')" />
                    </div>
                    <div class="col-3" t-if="doc.invoice_payment_term_id" name="div_payment_term">
                        <strong>Payment Terms:</strong>
                        <p t-esc="doc.invoice_payment_term_id.name" />
                    </div>
                </div>
                <br />

                <div class="row">
                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any(l.discount for l in doc.invoice_line_ids)" />
                    <table class="table table-sm o_main_table mt16" style="border:1px solid #ddd; width:100%;">
                        <thead style="background: #eee;">
                            <tr>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">ITEM</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">ITEM CODE</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">DESCRIPTION</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">QUANTITY</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">UNIT</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">UNIT PRICE</th>
                                <th t-if="display_discount" style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span>DISC.%</span>
                                </th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">TAXES</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">AMOUNT</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.invoice_line_ids" t-as="line">
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-esc="line_index + 1" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-field="line.product_id.default_code" />
                                </td>
                                <td style="border:1px solid #ddd; color: #000;">
                                    <span t-field="line.product_id.name" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-field="line.quantity" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-field="line.product_id.uom_id.name" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-field="line.price_unit" />
                                </td>
                                <td t-if="display_discount" class="text-right">
                                    <span t-field="line.discount" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span class="text-nowrap" t-field="line.price_subtotal" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="clearfix">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr class="border-black o_subtotal" style="">
                                    <td>
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_untaxed" />
                                    </td>
                                </tr>
                                <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="len(doc.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and doc.amount_untaxed == amount_by_group[2]">
                                            <td>
                                                <span class="text-nowrap" t-esc="amount_by_group[0]" />
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-esc="amount_by_group[0]" />
                                                <span class="text-nowrap">
                                                    on
                                                    <t t-esc="amount_by_group[4]" />
                                                </span>
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <span class="text-nowrap" t-field="doc.amount_total" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <p t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference" name="payment_communication">
                    Please use the following communication for your payment :
                    <b>
                        <span t-field="o.payment_reference" />
                    </b>
                </p>
                <p t-if="o.invoice_payment_term_id" name="payment_term">
                    <span t-field="o.invoice_payment_term_id.note" />
                </p>
                <p t-if="o.narration" name="comment">
                    <span t-field="o.narration" />
                </p>
                <p t-if="o.fiscal_position_id.note" name="note">
                    <span t-field="o.fiscal_position_id.note" />
                </p>
                <p t-if="o.invoice_incoterm_id" name="incoterm">
                    <strong>Incoterm: </strong>
                    <span t-field="o.invoice_incoterm_id.code" />
                    -
                    <span t-field="o.invoice_incoterm_id.name" />
                </p>
                <div id="qrcode" t-if="o.display_qr_code">
                    <p t-if="qr_code_urls.get(o.id)">
                        <strong class="text-center">Scan me with your banking app.</strong>
                        <br />
                        <br />
                        <img class="border border-dark rounded" t-att-src="qr_code_urls[o.id]" />
                    </p>
                </div>
            </div>
        </template>

        <template id="invoice_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page" style="font-size: 14px !important;">
                            <t t-call="oo_delivery_note.invoice_report_document" t-lang="doc.partner_id.lang" />
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>