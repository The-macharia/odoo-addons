<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <template id="sale_order_report_document">
            <br />
            <div class="container">
                <div class="row">
                    <div class="col-6" style="width: 50% !important;" />
                    <div class="col-6 text-right" style="width: 50% !important;">
                        <p t-field="doc.partner_id.name" />
                        <p t-field="doc.partner_id.street" />
                        <p>
                            <span t-field="doc.partner_id.city" />
                            <span t-field="doc.partner_id.zip" />
                        </p>
                        <p t-field="doc.partner_id.country_id.name" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-3" t-if="doc.name" name="div_name">
                        <strong>Order No:</strong>
                        <p class="m-0" t-field="doc.name" />
                    </div>
                    <div class="col-3" t-if="doc.picking_ids" name="div_delivery">
                        <strong>Delivery No:</strong>
                        <p class="m-0" t-esc="', '.join(doc.picking_ids.mapped('name'))" />
                    </div>
                    <div class="col-3" t-if="doc.date_order" name="div_date">
                        <strong>Date:</strong>
                        <p class="m-0" t-esc="doc.date_order.strftime('%d %b, %Y')" />
                    </div>
                    <div class="col-3" t-if="doc.payment_term_id" name="div_payment_term">
                        <strong>Payment Terms:</strong>
                        <p t-esc="doc.payment_term_id.name" />
                    </div>
                </div>
                <br />

                <br />
                <div class="row">
                    <table class="table table-sm o_main_table mt16" style="border:1px solid #ddd; width:100%;">
                        <thead style="background: #eee;">
                            <tr>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">ITEM</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">ITEM CODE</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">DESCRIPTION</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">QUANTITY</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">UNIT</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">UNIT PRICE</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">TAXES</th>
                                <th style="border:1px solid #ddd; text-align:center; color: #000;">AMOUNT</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.order_line" t-as="line">
                                <td style="border:1px solid #ddd; text-align:left; color: #000;">
                                    <span t-esc="line_index + 1" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-field="line.product_id.default_code" />
                                </td>
                                <td style="border:1px solid #ddd; color: #000;">
                                    <span t-field="line.product_id.name" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-field="line.product_uom_qty" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-field="line.product_id.uom_id.name" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-field="line.price_unit" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))" />
                                </td>
                                <td style="border:1px solid #ddd; text-align:center; color: #000;">
                                    <span class="text-nowrap" t-field="line.price_subtotal" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="clearfix" name="so_total_summary">
                    <div id="total" class="row" name="total">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm">
                                <tr class="border-black o_subtotal" style="">
                                    <td name="td_amount_untaxed_label">
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td name="td_amount_untaxed" class="text-right">
                                        <span t-field="doc.amount_untaxed" />
                                    </td>
                                </tr>
                                <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                            <td name="td_amount_by_group_label_3">
                                                <span t-esc="amount_by_group[0]" />
                                                <span>
                                                    &amp;nbsp;
                                                    <span>on</span>
                                                    &amp;nbsp;
                                                    <t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}" />
                                                </span>
                                            </td>
                                            <td name="td_amount_by_group_3" class="text-right o_price_total">
                                                <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}" />
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td name="td_amount_by_group_label">
                                                <span t-esc="amount_by_group[0]" />
                                            </td>
                                            <td name="td_amount_by_group" class="text-right o_price_total">
                                                <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}" />
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td name="td_amount_total_label">
                                        <strong>Total</strong>
                                    </td>
                                    <td name="td_amount_total" class="text-right">
                                        <span t-field="doc.amount_total" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <div class="oe_structure" />
            </div>
        </template>

        <template id="sale_order_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page" style="font-size: 14px !important;">
                            <t t-call="oo_delivery_note.sale_order_report_document" t-lang="doc.partner_id.lang" />
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
