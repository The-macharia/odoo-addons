<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">

        <report id="action_report_delivery_note" model="stock.picking" string="Delivery Slip" report_type="qweb-pdf" name="oo_delivery_note.delivery_note_report" file="oo_delivery_note.delivery_note_report" print_report_name="'Delivery Slip - %s - %s' % (object.partner_id.name or '', object.name)" />

        <report id="stock.action_report_delivery" model="stock.picking" string="Delivery Slip" report_type="qweb-pdf" name="stock.report_deliveryslip" file="stock.report_deliveryslip" menu="False" />

        <report id="account.account_invoices" model="account.move" string="Invoices" report_type="qweb-pdf" name="account.report_invoice_with_payments" file="account.report_invoice_with_payments" menu="False" />

        <report id="action_report_invoice_report" model="account.move" string="Invoices" report_type="qweb-pdf" name="oo_delivery_note.invoice_report" file="oo_delivery_note.invoice_report" print_report_name="(object._get_report_base_filename())" attachment="(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')"/>

        <report id="sale.action_report_saleorder" model="sale.order" string="Quotation / Order" report_type="qweb-pdf" name="sale.report_saleorder" file="sale.report_saleorder" menu="False" />

        <report id="purchase.action_report_purchase_order" model="purchase.order" string="Purchase Order" report_type="qweb-pdf" name="purchase.report_purchaseorder" file="purchase.report_purchaseorder" menu="False" />

        <report id="action_report_sale_order_report" model="sale.order" string="Quotation / Order" report_type="qweb-pdf" name="oo_delivery_note.sale_order_report" file="oo_delivery_note.sale_order_report" print_report_name="(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)" />

        <report id="action_report_purchase_order_report" model="purchase.order" string="Purchase Order" report_type="qweb-pdf" name="oo_delivery_note.purchase_order_report" file="oo_delivery_note.purchase_order_report" print_report_name="(object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or 'Purchase Order - %s' % (object.name))" />
    </data>
</odoo>
