<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Analytical Account Form View  -->
        <record id="view_account_analytic_account_form_inh" model="ir.ui.view">
            <field name="name">analytic.analytic.account.form.inh</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_id']" position="after">
                    <field name="category"/>
                </xpath>
            </field>
        </record>
        
        <!-- Analytical Account Tree View  -->
        <record id="view_account_analytic_account_list_inh" model="ir.ui.view">
            <field name="name">analytic.analytic.account.tree.inh</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="category"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
