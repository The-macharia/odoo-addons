<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Invoice Form View  -->
        <record id="invoice_supplier_form_inherit_id" model="ir.ui.view">
            <field name="name">account.move.supplier.form.inh</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!--    Hide Account Analytic & Tags field      -->
                <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='discount']" position="attributes" >
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='tax_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="after" >
                    <field name="department_id" domain="[('category', '=', 'dept')]" options="{'no_quick_create': True, 'no_open': True}" />
                    <field name="activity_ids" domain="[('category', '=', 'actv')]" groups="purchase.group_analytic_accounting" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="location_ids" domain="[('category', '=', 'loct')]" groups="purchase.group_analytic_accounting" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="partner_ids" domain="[('category', '=', 'part')]" groups="purchase.group_analytic_accounting" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </xpath>
                
                
            </field>
        </record>
        
    </data>
</odoo>
