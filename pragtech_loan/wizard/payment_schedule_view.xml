<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="loan_payment_scheduled_form_view" model="ir.ui.view">
			<field name="name">Payment Schedule Wizard Form View</field>
			<field name="model">loan.payment.scheduled</field>
			<field name="arch" type="xml">
				<form string="Payment Schedule Wizard">
					<group>
						<label for="disbursement_amt"/>
                        <div name="disbursement_amt" class="o_row">
                            <field name="disbursement_amt"/>
                            <field name="currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>
                        </div>
						<field name="journal_id" widget="selection" attrs="{'invisible': [('disbursement_amt', '=', 0)]}"/>
						<field name="date" required="1"/>

					</group>
					<footer>
						<group decoration-danger="name">
							<field name="name" readonly="1"   no_label="1" style="color:red;font-size:10pt;"/>
						</group>
						<group>
						<button string="Generate Payment Schedule" type="object" name="generate_payment_shcedule"  class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel"></button></group>
					</footer>
				</form>
			</field>
		</record>


		<record id="payment_schedule_wizard_view" model="ir.actions.act_window">
			<field name="name">PaymentWizard Form View</field>
			<field name="res_model">loan.payment.scheduled</field>
			<!-- <field name="view_type">form</field> -->
			<field name="view_mode">form</field>
			<field name="view_id" ref="loan_payment_scheduled_form_view"/>
			<field name="target">new</field>
		</record>

	</data>
</odoo>
