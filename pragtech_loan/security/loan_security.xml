<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
		<record model="ir.module.category" id="module_category_loan_management">
            <field name="name">Loan</field>
            <field name="description">Helps you manage your Loan and main Loan operations: Loan application, configurations, etc.</field>
            <field name="sequence">55</field>
        </record>
        
        <record id="group_loan_del_user" model="res.groups">
	        <field name="name">Loan Deletion Access</field>
	        <!-- <field name="category_id" ref="module_category_loan_management"/> -->
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    	</record>
    	
    	<record id="group_allow_del_entries" model="res.groups">
	        <field name="name">Allow Payment Entries Deletion</field>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    	</record>
        
        <record id="group_allow_loan_rejection" model="res.groups">
	        <field name="name">Allow Loan Rejection </field>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    	</record>
    	
    	<record id="group_allow_loan_cancel_disbursement" model="res.groups">
	        <field name="name">Allow Cancel Disbursement</field>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    	</record>
    	
    	<record id="group_allow_loan_extended_period" model="res.groups">
	        <field name="name">Allow Loan Extension</field>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    	</record>
    	
    	<!-- <record id="group_allow_void_application" model="res.groups">
	        <field name="name">Allow Void Application</field>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    	</record> -->
    	
    	<record id="group_allow_waived_entry" model="res.groups">
	        <field name="name">Allow Waive Off</field>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    	</record>
    	
        <record id="group_loan_user" model="res.groups">
	        <field name="name">User</field>
	        <field name="category_id" ref="module_category_loan_management"/>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    	</record>
    	<record id="group_loan_manager" model="res.groups">
	        <field name="name">Manager</field>
	        <field name="category_id" ref="module_category_loan_management"/>
	        <field name="implied_ids" eval="[(4, ref('group_loan_user'))]"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    	</record>
    	
    	<record id="account_loan_mgt_rule" model="ir.rule">
	        <field name="name">User Loan Mangement</field>
	        <field name="model_id" ref="model_account_loan"/>
	        <field name="global" eval="True"/>
        	<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        	<field name="groups" eval="[(4, ref('group_loan_user')),(4, ref('group_loan_manager'))]"/>
    	</record>
    	
    	
    </data>
</odoo>