<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_config_settings_view_form" model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.account
			</field>
			<field name="model">res.config.settings</field>
			<field name="priority" eval="40" />
			<field name="inherit_id" ref="base.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[@id='accounting_reports']" position="after">
					<field name="company_currency_id" invisible="1" />
					<h2>Loans</h2>
					<div class="row mt16 o_settings_container" id="loan_approval_id"
						groups="pragtech_loan.group_loan_manager">

						<div class="col-md-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="loan_approval" />
							</div>


							<div class="o_setting_right_pane">
								<label for="loan_approval" />
								<div class="text-muted">
									Loan Managers must approve Loans
								</div>

								<div class="content-group" attrs="{'invisible': [('loan_approval', '=', False)]}">
									<div class="row mt16">
										<label for="validation_amount" class="col-md-4 o_light_label" />
										<field name="validation_amount" />
									</div>
								</div>
							</div>
						</div>
					</div>

				</xpath>
			</field>
		</record>
	</data>
</odoo>